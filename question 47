// C program to check prime, armstrong and perfect numbers using functions.
#include <stdio.h>
#include<math.h>
int flag = 1;
void chkprime(int);
void chkarmstrong(int);
void chkperfect(int);
int main()
{
    int num;
    printf("Enter the number:\n");
    scanf("%d", &num);
    chkprime(num);
    chkarmstrong(num);
    chkperfect(num);

    return 0;
}
void chkprime(int num)
{
    for (int i = 2; i < num; i++)
    {
        flag = 1;
        if (num % i == 0)
        {
            flag = 0;
            break;
        }
    }

    if (flag == 1)
    {
        printf("\nPrime number\n");
    }
    else
        printf("\n Not a prime number\n");
}
void chkarmstrong(int num)
{
    int count;
    for (int i = 0; i < num; i++)
    {
        int rem=num%10;
        if (rem>0)
        {
            count++;
            num=num/10;
        }
        
    }
    int temp=num,sum=0;
    for (int i = 0; i < num; i++)
    {
        int rem=num%10;
        sum+=pow(rem,count);
        num=num/10;
    }
    if (temp==sum)
    {
        printf("\nArmstrong number\n");
    }else
        printf("\nNot a Armstrong number\n");
}
void chkperfect(int num)
{
    int sum=0;
    for (int i = 1; i < num; i++)
    {
        if (num%i==0)
        {
            sum+=i;
        }
        
    }
    if (sum==num)
    {
        printf("\nPerfect number\n");
    }else
        printf("\nNot a Perfect number\n");
    
}
